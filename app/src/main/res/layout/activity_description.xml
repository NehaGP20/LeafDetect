<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Description"
    android:orientation="vertical"
    android:background="@drawable/bc"
    android:alpha="0.8">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Descripition"
        android:textStyle="bold"
        android:padding="20dp"
        android:textSize="35dp"
        android:fontFamily="@font/font4"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:layout_marginLeft="60dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        CardView_cardBackgroundColor="#ffffff"
        CardView_cardCornerRadius="18dp"
        CardView_cardElevation="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cucumber is a herbaceous annual plant. Cucumber stems - creeping branching vines, faceted and lowered. Eat unripe fruits - greens - at the age of 9-12 days. Four five-day fruits up to 10 cm long go for preparation of gherkins, and two three-day ovaries 6-8 cm long for pickles."
                android:textSize="16dp"
                android:textColor="#000"
                android:textStyle="bold"
                android:padding="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The highest price and correspondingly high profit are obtained when receiving early or late products, i.e. when the market feels a shortage of these products. In the south of the country, thanks to more favorable climatic conditions, Tajik farmers grow early greenhouse cucumbers in film greenhouses. Therefore, it is very important to choose a suitable variety with a short growing season and good taste."
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:padding="8dp"/>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>