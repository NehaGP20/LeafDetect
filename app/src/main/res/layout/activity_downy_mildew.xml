<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DownyMildew"
    android:background="@drawable/bc"
    android:alpha="0.9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            CardView_cardBackgroundColor="#ffffff"
            CardView_cardCornerRadius="18dp"
            CardView_cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="left"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/diseaseTitleTextView"
                    android:textSize="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#388E3C"
                    android:text="Test"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <TextView
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#424242"
                    android:layout_marginTop="10dp"
                    android:text="Cause:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/causeTextView"
                    android:text="Downy Mildew - Peronospora Problem : The cause of the disease is a fungus that rapidly develops at high humidity. To provoke its growth can and watering plants with cold water."
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"/>
                <TextView
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#424242"
                    android:layout_marginTop="10dp"
                    android:text="Remedies: "
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/remediesTextView"
                    android:textSize="14sp"
                    android:text="Finding the first signs of the disease, stop watering and feeding. To stop the spread of downy powdery mildew, treat the plants with warm (about + 25 ° C) solution of polycarbacin, copper oxychloride or Bordeaux liquids (mix 100 g of copper sulphate and fresh lime with 10 liters of warm (about +25 °C) water).Also, to combat downy mildew, the drugs Ordan and Ridomil are used. After processing the plants, try to ensure that the temperature inside the greenhouse or greenhouse does not fall below + 25 C. If you grow cucumbers in the open field, just cover them with film at night.For the prevention of powdery mildew, it is useful to periodically process plants with a solution of whey."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">


            <Button
                android:id="@+id/buyfertilizersTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:elevation="2dp"
                android:textColor="@color/darkgreen"
                android:background="@color/white"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:text="Buy  fertilizers"/>

            <Button
                android:id="@+id/checkAnother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:background="@color/white"
                android:textColor="@color/darkgreen"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:text="Check  Another"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>