<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cladosporiosis"
    android:background="@drawable/bc"
    android:alpha="0.9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            CardView_cardBackgroundColor="#ffffff"
            CardView_cardCornerRadius="18dp"
            CardView_cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/diseaseTitleTextView"
                    android:textSize="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#388E3C"
                    android:text="Test"
                    android:textAllCaps="true"
                    android:textStyle="bold" />

                <TextView
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#424242"
                    android:layout_marginTop="10dp"
                    android:text="Cause:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/causeTextView"
                    android:text="Cladosporiosis - Brown Olive Spotted Problem : The source of plant contamination with cladosporioides is plant residues - more correctly, the spores of the fungus that cause the disease, which winter on them. "
                    android:textSize="14sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"/>
                <TextView
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#424242"
                    android:layout_marginTop="10dp"
                    android:text="Remedies:"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/remediesTextView"
                    android:textSize="14sp"
                    android:text="-for 4-5 days, stop watering the plants;
                                  - if the average daily temperature drops below +18°C, try to raise the temperature to at least + 20°C - for example, by closing the greenhouses for the night and covering the plants in the soil with foil;
                                  - treat the plants with a 1 solution of Bordeaux liquid, a 0.4 solution of copper oxychloride, Fundazol or a solution based on the preparation Oxych, for preparation of which mix 20 g of the preparation with 10 liters of warm water."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp">


            <Button
                android:id="@+id/buyfertilizersTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:elevation="2dp"
                android:textColor="@color/darkgreen"
                android:background="@color/white"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:text="Buy  fertilizers"/>

            <Button
                android:id="@+id/checkAnother"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:background="@color/white"
                android:textColor="@color/darkgreen"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_centerHorizontal="true"
                android:text="Check  Another"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>